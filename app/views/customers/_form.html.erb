
<%= form_for @customer, local: true do |f| %>
 <% @customer.errors.full_messages.each do |error| %>
        <div class="alert alert-danger">
          <%= error %>
        </div>
        <% end %>
    <div class="form-group">

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

    </div>

    <%= f.submit class: 'btn btn-default' %>


<% end %>

